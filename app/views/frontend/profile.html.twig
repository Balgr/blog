{% extends 'frontend/layouts/layout.html.twig' %}

{% block breadcrumb %}
    {% include 'frontend/breadcrumbs/users/profile.html.twig' %}
{% endblock %}

{% block content %}

    <div class="shortcode-login-regi-area pt-113 pb-120 black-bg-4">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-xl-6 col-md-12 col-12 ml-auto mr-auto">
                    <div class="pl-65 pr-65">
                        <div class="login-regi-wrapper">
                            <div class="login-register-tab-list nav">
                                Profil : {{ currentUser.username }}
                            </div>
                            <div class="tab-content login-regi-content">
                                <div id="edit">
                                    <div class="login-register-form">
                                         {% if errors is not null %}
                                            {% for error in errors %} <p>{{ error }}</p> {% endfor %}
                                        {% endif %}
                                        <form action="#" method="post">
                                            <input type="hidden" name="id" value="{{ currentUser.id }}">

                                            <label class="label-profile">Pseudo</label>
                                            <input type="text" name="username" value="{{ currentUser.username }}">

                                            <label class="label-profile">Mot de passe</label>
                                            <input type="password" name="password" value="{{ currentUser.password }}">

                                            <label class="label-profile">Email</label>
                                            <input type="text" name="email" value="{{ currentUser.email }}">

                                            <div class="submit-btn">
                                                <button class="btn-hover" type="submit">Modifier</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
