                    </div> #}
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th>Commentaire ID</th>
                                <th>Post ID</th>
                                <th>Contenu</th>
                                <th>Auteur</th>
                                <th>Email</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for comment in comments %}
                                <tr>
                                    <td>{{ comment.id }}</td>
                                    <td><a href="/posts/{{ comment.postId }}">{{ comment.postId }}</a></td>
                                    <td>{{ comment.content }}</td>
                                    <td>{{ comment.authorName }}</td>
                                    <td>{{ comment.status }}</td>
                                    <td><a href="/backend/comments/trash/{{ comment.id }}"><em class="fa fa-trash"></em></a>
                                        <a href="/backend/comments/delete/{{ comment.id }}"><em class="fa fa-minus-circle"></em></a>
                                        <a href="/backend/comments/publish/{{ comment.id }}"><em class="fa fa-angle-right"></em></a></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}
