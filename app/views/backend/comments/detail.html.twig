            <div class="card mb-4">
                <div class="card-block">
                    <h3 class="card-title">Commentaire #{{ comment.id }}</h3>
                    <h4>Publi√© par {{ comment.authorName }} (){{ comment.authorEmail }}, le {{ comment.creationDate }}</h4>
                    <div class="backend_comment-detail">
                        {{ comment.content }}
                    </div>

                </div>
            </div>
        </div>
    {% endblock %}
